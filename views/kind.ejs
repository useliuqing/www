<%- include('header') %>
    <div class="container">
        <ol class="breadcrumb">
            <li><a href="/stock">主页</a></li>
            <li>商品种类编辑</li>
        </ol>
    </div>
    <div class="container">
        <div class="panel panel-default">
            <div class="panel-heading well" id="kindPlusHead">
                <h3 class="panel-title">
                    <button class="btn btn-success" onclick="product.kind.setNewKind()">
                        <span class="glyphicon glyphicon-plus">添加新种类</span>
                    </button>
                </h3>
            </div>
            <div class="panel-body">
                <h3>商品种类信息</h3>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>商品种类ID</th>
                            <th>种类名称</th>
                            <th>备注</th>
                            <th>更新时间</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody id="kindsInfo">
                        <% kinds.forEach(function(kind){  %>
                            <tr>
                                <td><%= kind.kindID %></td>
                                <td><%= kind.name %></td>
                                <td><%= kind.remark %></td>
                                <td><%= kind.lastUpdateTime %></td>
                                <td>
                                    <button class="btn btn-info">编辑</button>
                                    <button class="btn btn-danger">删除</button>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>



<%- include('footer') %>